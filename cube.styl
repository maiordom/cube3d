@import 'nib'

colors = #058DC7 #50B432 #ED561B #DDDF00 #FF9655 #FFF263

HTML, BODY
    font-family Arial, sans-serif
    padding 0
    margin 0
    background hsl(24, 20%, 95%) unquote('url(data:image/png;base64,)');
    
pre
    margin 0
    padding 40px
    font 100%/1.5em Monaco, Consolas, Inconsolata, 'Deja Vu Sans Mono', 'Droid Sans Mono', 'Andale Mono', 'Lucida Console', monospace;
    color slategray;
    text-shadow 0 1px white

cube-animation()
    animation-name rotate-3d
    animation-iteration-count infinite
    animation-timing-function linear
    animation-duration 2s     

.cube_animation
    cube-animation()

.cube_animationhover
    animation-play-state paused

@keyframes rotate-3d
    from
        transform rotateY( 0deg ) rotateZ( 0deg )
    to  
        transform rotateY( 360deg ) rotateZ( 360deg )

opacity    = .9
cubeWidth  = 250px
cubeHeight = 250px

.cube
    transform-style preserve-3d
    transition transform 2s
    transform rotateX( -25deg ) rotateY( 45deg ) rotateZ( 0deg )

    position relative
    width cubeWidth
    height cubeHeight
    margin 100px auto 0 auto

.cube-

    &wrapper 
        perspective 8000px
        perspective-origin 50% 200px

    &item
        width cubeWidth
        height cubeHeight
        position absolute
        font-size 150px
        text-align center  

        span
            width cubeWidth
            height cubeHeight
            display table-cell
            vertical-align middle   
            color #fff           

    &front
        transform rotate3d( 0, 0, 0, 0deg ) translate3d( 0px, 0px, cubeWidth / 2 )
        background colors[ 0 ]
        background rgba( colors[ 0 ], opacity )

    &right
        transform rotate3d( 0, 1, 0, 90deg ) translate3d( 0px, 0px, cubeWidth / 2 )
        background colors[ 1 ]
        background rgba( colors[ 1 ], opacity )

    &left
        transform rotate3d( 0, 1, 0, 270deg ) translate3d( 0px, 0px, cubeWidth / 2 )
        background colors[ 2 ]
        background rgba( colors[ 2 ], opacity )

    &top
        height cubeWidth
        transform rotate3d( 1, 0, 0, 90deg ) translate3d( 0px, 0px, cubeWidth / 2 )
        background colors[ 3 ]
        background rgba( colors[ 3 ], opacity )

    &bottom
        height cubeWidth
        transform rotate3d( 1, 0, 0, 270deg ) translate3d( 0px, 0px, cubeWidth / 2 )
        background colors[ 4 ]
        background rgba( colors[ 4 ], opacity )

    &back
        transform rotate3d( 1, 0, 0, 180deg ) translate3d( 0px, 0px, cubeWidth / 2 )
        background colors[ 5 ]
        background rgba( colors[ 5 ], opacity )